<h1><%= @contact.full_name %></h1>

     <div class="row">

       <div class="col-md-9">

         <table class="table table-bordered table-striped">
           <tbody>
             <tr>
               <th>First Name</th>
               <td><%= @contact.first_name %></td>
             </tr>
             <tr>
               <th>Last Name</th>
               <td><%= @contact.last_name %></td>
             </tr>
             <tr>
               <th>Email</th>
               <td><%= @contact.email %></td>
             </tr>
             <tr>
               <th>Company</th>
               <td><%= @contact.company_name %></td>
             </tr>
           </tbody>
         </table>


       </div>

       <div class="col-md-3">
         <%= image_tag @contact.photo_url, class: "img-responsive img-thumbnail" %>
       </div>



   </div>
